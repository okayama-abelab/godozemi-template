\setpagelayout*{top=15mm,bottom=15mm,inner=20mm,outer=20mm,columnsep=10mm}

%
% Sectionの文字の大きさ等の調整
%
\def\section{\@startsection{section}{1}
	{\z@}{1.0ex plus 0.2ex minus .2ex}{0.5ex plus .1ex}
	{\large\bf}}
\def\subsection{\@startsection{subsection}{2}
	{\z@}{1.0ex plus 0.2ex minus .2ex}{0.5ex plus .1ex}
	{\normalsize\bf}}
\def\subsubsection{\@startsection{subsubsection}{3}
	{\z@}{1.0ex plus 0.5ex minus .2ex}{0.5ex plus .1ex}
	{\normalsize\bf}}
\def\paragraph{\@startsection{paragraph}{4}
	{\z@}{1.0ex plus 0.2ex minus .2ex}{-1em}
	{\normalsize\bf}}
\def\subparagraph{\@startsection{subparagraph}{4}
	{\parindent}{1.0ex plus 0.2ex minus .2ex}{-1em}
	{\normalsize\bf}}


%
% ページ番号の書式
%
\pagestyle{empty}

%
%  和文ヘッダ・英文フッタ（題名、発表者など)
%
%    使用法： \jeheader{和文題名}{英文題名}
%                      {和文発表者}{英文発表者}
%                      {和文所属}{英文所属}
%
%
\newcommand{\jeheader}[6]%
{{
\twocolumn[%\hspace*{1.8cm}
\begin{center}%\large%
% 題名
{\large\bf #1}\\{#2}\\
\vspace{0.2cm}%
% 発表者
{#3}\\{\small #4}\\
\vspace{0.2cm}%
{#5}\\{\small #6}
\end{center}%
\vspace{0.4cm}
]%
}}

%
% 　概要表示用マクロ
%
\renewcommand{\abstract}[1]{\noindent\textbf{概要} {#1}\\}

%
% 草稿用マクロ
%   草稿の時のみ使うものをかく
%
\newcommand{\IsDraft}[0]%
{
\pagestyle{myheadings}
\markright{作成日付：\the\year 年\the\month 月\the\day 日\the\hour 時\the\minute 分}
}

